# Next.js Public Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_CTF_URL=http://localhost:3001
NEXT_PUBLIC_LAB_URL=http://localhost:3002

# Shopify Integration (optional)
# Create a Shopify store and get your credentials from:
# https://yourstore.myshopify.com/admin/settings/notifications

# Your Shopify store URL (without https://)
# Example: xploitrum.myshopify.com
NEXT_PUBLIC_SHOPIFY_STORE_URL=

# Your Shopify Storefront API access token
# Get this from: Shopify Admin > Settings > Apps and sales channels > Develop apps
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=

# Shopify Collection URL (optional)
# The full URL to embed a specific collection
# Example: https://xploitrum.myshopify.com/collections/xploitrum-merch
NEXT_PUBLIC_SHOPIFY_COLLECTION_URL=

# OR use collection ID (alternative to collection URL)
# Collection ID can be found in your Shopify store collection settings
NEXT_PUBLIC_SHOPIFY_COLLECTION_ID=
